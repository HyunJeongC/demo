<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.demo.account.repository.AccountMapper">

    <resultMap id="accountMap" type="com.spring.demo.account.domain.Account">
        <result property="userId" column="user_id" />
        <result property="userNo" column="user_no" />
        <result property="favorMember" column="favor_member"/>
        <result property="regDate" column="reg_date"/>
        <result property="lastDate" column="last_date"/>
    </resultMap>

    <insert id="join">
        INSERT INTO account
            (user_id, password, name, email)
        VALUES (#{userId}, #{password}, #{name}, #{email})
    </insert>

    <select id="login" resultMap="accountMap">
        SELECT * FROM account
        WHERE user_id=#{userId} AND password=#{password}
    </select>


</mapper>